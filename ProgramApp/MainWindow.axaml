<Window
    x:Class="ProgramApp.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Enterprise Installation Suite"
    Width="900"
    Height="650"
    d:DesignHeight="650"
    d:DesignWidth="900"
    Background="#3d4543"
    ExtendClientAreaChromeHints="SystemChrome, PreferSystemChrome"
    ExtendClientAreaToDecorationsHint="True"
    TransparencyLevelHint="AcrylicBlur"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Offset="0" Color="#0055b8" />
            <!--  PMS 2935 C  -->
            <GradientStop Offset="1" Color="#009d4f" />
            <!--  PMS 2627 C  -->
        </LinearGradientBrush>
    </Window.Resources>

    <Window.Styles>
        <Style Selector="Button.primary">
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Padding" Value="16,10" />
            <Setter Property="Background" Value="#0055b8" />
            <!--  PMS 2935 C  -->
            <Setter Property="Foreground" Value="White" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1" />
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="Button.primary:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#3d1152" />
            <!--  PMS 2627 C  -->
            <Setter Property="RenderTransform" Value="scale(1.02)" />
        </Style>

        <Style Selector="Button.primary:pressed /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#002e6d" />
            <!--  PMS 294 C  -->
            <Setter Property="RenderTransform" Value="scale(0.98)" />
        </Style>

        <Style Selector="CheckBox">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Margin" Value="5,10,5,10" />
            <Setter Property="Foreground" Value="#cfd2d3" />
            <!--  PMS 427 C  -->
        </Style>

        <Style Selector="CheckBox:checked /template/ Border#NormalRectangle">
            <Setter Property="Background" Value="#0055b8" />
            <!--  PMS 2935 C  -->
            <Setter Property="BorderBrush" Value="#0055b8" />
            <!--  PMS 2935 C  -->
        </Style>

        <Style Selector="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Foreground" Value="#cfd2d3" />
            <!--  PMS 427 C  -->
        </Style>

        <Style Selector="TabItem">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="15,10" />
            <Setter Property="Margin" Value="0,0,1,0" />
            <Setter Property="Foreground" Value="#cfd2d3" />
            <!--  PMS 427 C  -->
            <Setter Property="Background" Value="#3d4543" />
            <!--  PMS 446 C  -->
        </Style>

        <Style Selector="TabItem:selected">
            <Setter Property="Background" Value="#6f7271" />
            <!--  PMS 424 C  -->
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style Selector="ProgressBar">
            <Setter Property="Height" Value="8" />
            <Setter Property="Foreground" Value="#0055b8" />
            <!--  PMS 2935 C  -->
            <Setter Property="Background" Value="#3d4543" />
            <!--  PMS 446 C  -->
        </Style>
    </Window.Styles>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header Banner  -->
        <Border
            Grid.Row="0"
            Height="80"
            Background="{StaticResource HeaderGradient}"
            BoxShadow="0 2 10 0 #15000000">
            <Grid>
                <StackPanel
                    Margin="20,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <!-- <Image
                        Width="48"
                        Height="48"
                        Margin="0,0,15,0"
                        Source="Assets/CompanyLogo.png" />-->
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock
                            FontSize="24"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="Enterprise Installation Suite" />
                        <TextBlock
                            Margin="0,2,0,0"
                            FontSize="14"
                            Foreground="#DDFFFFFF"
                            Text="Streamlined Software Deployment" />
                    </StackPanel>
                </StackPanel>
                <StackPanel
                    Margin="0,0,20,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Width="40"
                        Height="40"
                        Padding="0"
                        Background="Transparent"
                        BorderThickness="0"
                        Classes="primary">
                        <Image
                            Width="20"
                            Height="20"
                            Source="Assets/SettingsIcon.png" />
                    </Button>
                    <Button
                        Width="40"
                        Height="40"
                        Margin="10,0,0,0"
                        Padding="0"
                        Background="Transparent"
                        BorderThickness="0"
                        Classes="primary">
                        <Image
                            Width="20"
                            Height="20"
                            Source="Assets/HelpIcon.png" />
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!--  Main Content  -->
        <TabControl
            Grid.Row="1"
            Margin="0"
            Padding="0"
            Background="Transparent">
            <TabItem Header="Software Installation">
                <Grid Margin="20" RowDefinitions="Auto,*,Auto,Auto">
                    <StackPanel Grid.Row="0">
                        <TextBlock
                            Margin="0,5,0,15"
                            FontSize="22"
                            FontWeight="SemiBold"
                            Foreground="#0055b8"
                            Text="Software Deployment Center" />
                        <TextBlock
                            Margin="0,0,0,20"
                            FontSize="14"
                            Opacity="0.9"
                            Text="Select software packages to install on this system. You can customize your installation by selecting only the applications needed."
                            TextWrapping="Wrap" />

                        <Border
                            Margin="0,0,0,15"
                            Padding="15"
                            Background="#252526"
                            CornerRadius="4">
                            <Grid>
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <Image
                                        Width="20"
                                        Height="20"
                                        Source="Assets/InfoIcon.png" />
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="13"
                                        Foreground="#CCCCCC"
                                        Text="Recommended packages for this system are pre-selected based on hardware configuration and user profile."
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <ScrollViewer
                        Grid.Row="1"
                        Margin="0,10,0,20"
                        VerticalScrollBarVisibility="Auto">
                        <Grid Margin="0,5">
                            <!--  Categories panel on the left  -->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Categories  -->
                            <Border
                                Grid.Column="0"
                                Margin="0,0,15,0"
                                Background="#252526"
                                CornerRadius="4">
                                <StackPanel Margin="10">
                                    <TextBlock
                                        Margin="5,5,5,10"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Foreground="#0055b8"
                                        Text="CATEGORIES" />
                                    <Button
                                        Padding="10"
                                        HorizontalContentAlignment="Left"
                                        Background="Transparent"
                                        Classes="primary"
                                        FontWeight="SemiBold"
                                        Foreground="#E0E0E0">
                                        <StackPanel Orientation="Horizontal">
                                            <Image
                                                Width="16"
                                                Height="16"
                                                Margin="0,0,10,0"
                                                Source="Assets/ProductivityIcon.png" />
                                            <TextBlock Text="Productivity" />
                                        </StackPanel>
                                    </Button>
                                    <Button
                                        Padding="10"
                                        HorizontalContentAlignment="Left"
                                        Background="Transparent"
                                        Classes="primary"
                                        Foreground="#E0E0E0">
                                        <StackPanel Orientation="Horizontal">
                                            <Image
                                                Width="16"
                                                Height="16"
                                                Margin="0,0,10,0"
                                                Source="Assets/DevelopmentIcon.png" />
                                            <TextBlock Text="Development" />
                                        </StackPanel>
                                    </Button>
                                    <Button
                                        Padding="10"
                                        HorizontalContentAlignment="Left"
                                        Background="Transparent"
                                        Classes="primary"
                                        Foreground="#E0E0E0">
                                        <StackPanel Orientation="Horizontal">
                                            <Image
                                                Width="16"
                                                Height="16"
                                                Margin="0,0,10,0"
                                                Source="Assets/BrowsersIcon.png" />
                                            <TextBlock Text="Browsers" />
                                        </StackPanel>
                                    </Button>
                                    <Button
                                        Padding="10"
                                        HorizontalContentAlignment="Left"
                                        Background="Transparent"
                                        Classes="primary"
                                        Foreground="#E0E0E0">
                                        <StackPanel Orientation="Horizontal">
                                            <Image
                                                Width="16"
                                                Height="16"
                                                Margin="0,0,10,0"
                                                Source="Assets/EducationIcon.png" />
                                            <TextBlock Text="Education" />
                                        </StackPanel>
                                    </Button>
                                    <Button
                                        Padding="10"
                                        HorizontalContentAlignment="Left"
                                        Background="Transparent"
                                        Classes="primary"
                                        Foreground="#E0E0E0">
                                        <StackPanel Orientation="Horizontal">
                                            <Image
                                                Width="16"
                                                Height="16"
                                                Margin="0,0,10,0"
                                                Source="Assets/UtilityIcon.png" />
                                            <TextBlock Text="Utilities" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Border>

                            <!--  Software selection grid  -->
                            <Border
                                Grid.Column="1"
                                Background="#252526"
                                CornerRadius="4">
                                <Grid Margin="15">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <!--  Search and filter  -->
                                    <Grid Grid.Row="0" Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBox
                                            Grid.Column="0"
                                            Margin="0,0,10,0"
                                            Watermark="Search software..." />
                                        <Button
                                            Grid.Column="1"
                                            Width="120"
                                            Classes="primary"
                                            Content="Quick Select" />
                                    </Grid>

                                    <!--  Software checkboxes in a WrapPanel  -->
                                    <WrapPanel Grid.Row="1" Orientation="Horizontal">
                                        <!--  Office  -->
                                        <Border
                                            Width="180"
                                            Height="120"
                                            Margin="5"
                                            Background="#2D2D30"
                                            CornerRadius="4">
                                            <Grid>
                                                <StackPanel Margin="12">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image
                                                            Width="24"
                                                            Height="24"
                                                            Margin="0,0,10,0"
                                                            Source="Assets/OfficeIcon.png" />
                                                        <TextBlock
                                                            VerticalAlignment="Center"
                                                            FontWeight="Medium"
                                                            Text="Microsoft Office" />
                                                    </StackPanel>
                                                    <TextBlock
                                                        Margin="0,8,0,0"
                                                        FontSize="12"
                                                        Opacity="0.8"
                                                        Text="Word, Excel, PowerPoint, Outlook"
                                                        TextWrapping="Wrap" />
                                                    <TextBlock
                                                        Margin="0,8,0,0"
                                                        FontSize="11"
                                                        Opacity="0.7"
                                                        Text="Version: 2025 Enterprise" />
                                                </StackPanel>
                                                <CheckBox
                                                    x:Name="OfficeCheckBox"
                                                    Margin="0,8,8,0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Top"
                                                    IsChecked="True" />
                                            </Grid>
                                        </Border>

                                        <!--  Teams  -->
                                        <Border
                                            Width="180"
                                            Height="120"
                                            Margin="5"
                                            Background="#005850"
                                            CornerRadius="4">
                                            <Grid>
                                                <StackPanel Margin="12">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image
                                                            Width="24"
                                                            Height="24"
                                                            Margin="0,0,10,0"
                                                            Source="Assets/TeamsIcon.png" />
                                                        <TextBlock
                                                            VerticalAlignment="Center"
                                                            FontWeight="Medium"
                                                            Text="Microsoft Teams" />
                                                    </StackPanel>
                                                    <TextBlock
                                                        Margin="0,8,0,0"
                                                        FontSize="12"
                                                        Opacity="0.8"
                                                        Text="Collaboration and communication platform"
                                                        TextWrapping="Wrap" />
                                                    <TextBlock
                                                        Margin="0,8,0,0"
                                                        FontSize="11"
                                                        Opacity="0.7"
                                                        Text="Version: 2025 Enterprise" />
                                                </StackPanel>
                                                <CheckBox
                                                    x:Name="TeamsCheckBox"
                                                    Margin="0,8,8,0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Top"
                                                    IsChecked="True" />
                                            </Grid>
                                        </Border>

                                        <!--  VSCode  -->
                                        <Border
                                            Width="180"
                                            Height="120"
                                            Margin="5"
                                            Background="#005850"
                                            CornerRadius="4">
                                            <Grid>
                                                <StackPanel Margin="12">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image
                                                            Width="24"
                                                            Height="24"
                                                            Margin="0,0,10,0"
                                                            Source="Assets/VSCodeIcon.png" />
                                                        <TextBlock
                                                            VerticalAlignment="Center"
                                                            FontWeight="Medium"
                                                            Text="VS Code" />
                                                    </StackPanel>
                                                    <TextBlock
                                                        Margin="0,8,0,0"
                                                        FontSize="12"
                                                        Opacity="0.8"
                                                        Text="Lightweight code editor for development"
                                                        TextWrapping="Wrap" />
                                                    <TextBlock
                                                        Margin="0,8,0,0"
                                                        FontSize="11"
                                                        Opacity="0.7"
                                                        Text="Version: 1.88.3" />
                                                </StackPanel>
                                                <CheckBox
                                                    x:Name="VsCodeCheckBox"
                                                    Margin="0,8,8,0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Top" />
                                            </Grid>
                                        </Border>

                                        <!--  GeoGebra  -->
                                        <Border
                                            Width="180"
                                            Height="120"
                                            Margin="5"
                                            Background="#005850"
                                            CornerRadius="4">
                                            <Grid>
                                                <StackPanel Margin="12">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image
                                                            Width="24"
                                                            Height="24"
                                                            Margin="0,0,10,0"
                                                            Source="Assets/GeoGebraIcon.png" />
                                                        <TextBlock
                                                            VerticalAlignment="Center"
                                                            FontWeight="Medium"
                                                            Text="GeoGebra" />
                                                    </StackPanel>
                                                    <TextBlock
                                                        Margin="0,8,0,0"
                                                        FontSize="12"
                                                        Opacity="0.8"
                                                        Text="Dynamic mathematics software"
                                                        TextWrapping="Wrap" />
                                                    <TextBlock
                                                        Margin="0,8,0,0"
                                                        FontSize="11"
                                                        Opacity="0.7"
                                                        Text="Version: 6.0.784" />
                                                </StackPanel>
                                                <CheckBox
                                                    x:Name="GeoGebraCheckBox"
                                                    Margin="0,8,8,0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Top" />
                                            </Grid>
                                        </Border>

                                        <!--  Ordnett  -->
                                        <Border
                                            Width="180"
                                            Height="120"
                                            Margin="5"
                                            Background="#005850"
                                            CornerRadius="4">
                                            <Grid>
                                                <StackPanel Margin="12">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image
                                                            Width="24"
                                                            Height="24"
                                                            Margin="0,0,10,0"
                                                            Source="Assets/OrdnettIcon.png" />
                                                        <TextBlock
                                                            VerticalAlignment="Center"
                                                            FontWeight="Medium"
                                                            Text="Ordnett" />
                                                    </StackPanel>
                                                    <TextBlock
                                                        Margin="0,8,0,0"
                                                        FontSize="12"
                                                        Opacity="0.8"
                                                        Text="Dictionary and language tool"
                                                        TextWrapping="Wrap" />
                                                    <TextBlock
                                                        Margin="0,8,0,0"
                                                        FontSize="11"
                                                        Opacity="0.7"
                                                        Text="Version: 2025" />
                                                </StackPanel>
                                                <CheckBox
                                                    x:Name="OrdnettCheckBox"
                                                    Margin="0,8,8,0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Top" />
                                            </Grid>
                                        </Border>

                                        <!--  Chrome  -->
                                        <Border
                                            Width="180"
                                            Height="120"
                                            Margin="5"
                                            Background="#005850"
                                            CornerRadius="4">
                                            <Grid>
                                                <StackPanel Margin="12">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image
                                                            Width="24"
                                                            Height="24"
                                                            Margin="0,0,10,0"
                                                            Source="Assets/ChromeIcon.png" />
                                                        <TextBlock
                                                            VerticalAlignment="Center"
                                                            FontWeight="Medium"
                                                            Text="Google Chrome" />
                                                    </StackPanel>
                                                    <TextBlock
                                                        Margin="0,8,0,0"
                                                        FontSize="12"
                                                        Opacity="0.8"
                                                        Text="Fast and secure web browser"
                                                        TextWrapping="Wrap" />
                                                    <TextBlock
                                                        Margin="0,8,0,0"
                                                        FontSize="11"
                                                        Opacity="0.7"
                                                        Text="Version: 126.0.6478.65" />
                                                </StackPanel>
                                                <CheckBox
                                                    x:Name="ChromeCheckBox"
                                                    Margin="0,8,8,0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Top"
                                                    IsChecked="True" />
                                            </Grid>
                                        </Border>

                                        <!--  Firefox  -->
                                        <Border
                                            Width="180"
                                            Height="120"
                                            Margin="5"
                                            Background="#005850"
                                            CornerRadius="4">
                                            <Grid>
                                                <StackPanel Margin="12">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image
                                                            Width="24"
                                                            Height="24"
                                                            Margin="0,0,10,0"
                                                            Source="Assets/FirefoxIcon.png" />
                                                        <TextBlock
                                                            VerticalAlignment="Center"
                                                            FontWeight="Medium"
                                                            Text="Mozilla Firefox" />
                                                    </StackPanel>
                                                    <TextBlock
                                                        Margin="0,8,0,0"
                                                        FontSize="12"
                                                        Opacity="0.8"
                                                        Text="Private and secure web browser"
                                                        TextWrapping="Wrap" />
                                                    <TextBlock
                                                        Margin="0,8,0,0"
                                                        FontSize="11"
                                                        Opacity="0.7"
                                                        Text="Version: 126.0" />
                                                </StackPanel>
                                                <CheckBox
                                                    x:Name="FirefoxCheckBox"
                                                    Margin="0,8,8,0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Top" />
                                            </Grid>
                                        </Border>

                                        <!--  Python  -->
                                        <Border
                                            Width="180"
                                            Height="120"
                                            Margin="5"
                                            Background="#005850"
                                            CornerRadius="4">
                                            <Grid>
                                                <StackPanel Margin="12">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image
                                                            Width="24"
                                                            Height="24"
                                                            Margin="0,0,10,0"
                                                            Source="Assets/PythonIcon.png" />
                                                        <TextBlock
                                                            VerticalAlignment="Center"
                                                            FontWeight="Medium"
                                                            Text="Python" />
                                                    </StackPanel>
                                                    <TextBlock
                                                        Margin="0,8,0,0"
                                                        FontSize="12"
                                                        Opacity="0.8"
                                                        Text="Programming language with scientific libraries"
                                                        TextWrapping="Wrap" />
                                                    <TextBlock
                                                        Margin="0,8,0,0"
                                                        FontSize="11"
                                                        Opacity="0.7"
                                                        Text="Version: 3.12.2" />
                                                </StackPanel>
                                                <CheckBox
                                                    x:Name="PythonCheckBox"
                                                    Margin="0,8,8,0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Top" />
                                            </Grid>
                                        </Border>

                                        <!--  Web Shortcuts  -->
                                        <Border
                                            Width="180"
                                            Height="120"
                                            Margin="5"
                                            Background="#005850"
                                            CornerRadius="4">
                                            <Grid>
                                                <StackPanel Margin="12">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image
                                                            Width="24"
                                                            Height="24"
                                                            Margin="0,0,10,0"
                                                            Source="Assets/WebShortcutKIIcon.png" />
                                                        <TextBlock
                                                            VerticalAlignment="Center"
                                                            FontWeight="Medium"
                                                            Text="Web Shortcuts" />
                                                    </StackPanel>
                                                    <TextBlock
                                                        Margin="0,8,0,0"
                                                        FontSize="12"
                                                        Opacity="0.8"
                                                        Text="Enterprise web portal shortcuts"
                                                        TextWrapping="Wrap" />
                                                    <TextBlock
                                                        Margin="0,8,0,0"
                                                        FontSize="11"
                                                        Opacity="0.7"
                                                        Text="Elvis &amp; Karriere links" />
                                                </StackPanel>
                                                <CheckBox
                                                    x:Name="WebShortcutKICheckBox"
                                                    Margin="0,8,8,0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Top"
                                                    IsChecked="True" />
                                            </Grid>
                                        </Border>
                                    </WrapPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </ScrollViewer>

                    <StackPanel
                        Grid.Row="2"
                        Margin="0,10,0,15"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <CheckBox
                            x:Name="CreateDesktopShortcutsCheckBox"
                            Margin="0,0,15,0"
                            Content="Create desktop shortcuts"
                            IsChecked="True" />
                        <CheckBox
                            x:Name="LaunchOnCompleteCheckBox"
                            Margin="0,0,15,0"
                            Content="Launch applications when complete" />
                        <CheckBox
                            x:Name="EjectDiskCheckBox"
                            Margin="0"
                            Content="Exit after installation" />
                    </StackPanel>

                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <TextBlock
                                x:Name="StatusText"
                                FontSize="13"
                                Opacity="0.7"
                                Text="Ready to install. 3 applications selected." />
                            <ProgressBar
                                x:Name="ProgressBarInstall"
                                Width="350"
                                Margin="0,8,20,0"
                                HorizontalAlignment="Left"
                                Maximum="100"
                                Minimum="0"
                                ShowProgressText="True"
                                Value="0" />
                        </StackPanel>

                        <StackPanel
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <Button
                                Width="120"
                                Margin="0,0,10,0"
                                Background="Transparent"
                                Classes="primary"
                                Content="Cancel" />
                            <Button
                                Width="150"
                                Classes="primary"
                                Click="InstallButton"
                                Content="Install Selected" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Header="System Maintenance">
                <Grid Margin="20" RowDefinitions="Auto,*,Auto">
                    <StackPanel Grid.Row="0">
                        <TextBlock
                            Margin="0,5,0,15"
                            FontSize="22"
                            FontWeight="SemiBold"
                            Foreground="#0055b8"
                            Text="System Tools and Maintenance" />
                        <TextBlock
                            Margin="0,0,0,20"
                            FontSize="14"
                            Opacity="0.9"
                            Text="Maintain system performance and stability with these diagnostic and repair tools."
