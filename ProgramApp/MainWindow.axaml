<Window
    x:Class="ProgramApp.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="IKTHub"
    Width="850"
    Height="870"
    d:DesignHeight="650"
    d:DesignWidth="900"
    Background="White"
    ExtendClientAreaChromeHints="SystemChrome, PreferSystemChrome"
    ExtendClientAreaToDecorationsHint="True"
    Icon="/Assets/Innlandet.png"
    TransparencyLevelHint="AcrylicBlur"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Offset="0" Color="#cfd2d3" />
            <GradientStop Offset="1" Color="#ffffff" />
        </LinearGradientBrush>
    </Window.Resources>

    <Window.Styles>
        <Style Selector="Button.primary">
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Padding" Value="16,10" />
            <Setter Property="Background" Value="#009d4f" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1" />
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="Button.primary:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#003f8a" />
            <Setter Property="RenderTransform" Value="scale(1.02)" />
        </Style>

        <Style Selector="Button.primary:pressed /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#002e6d" />
            <Setter Property="RenderTransform" Value="scale(0.98)" />
        </Style>

        <Style Selector="CheckBox">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Margin" Value="5,10,5,10" />
            <Setter Property="Foreground" Value="#3d4543" />
            <Setter Property="BorderBrush" Value="Black" />
        </Style>

        <Style Selector="CheckBox:checked /template/ Border#NormalRectangle">
            <Setter Property="Background" Value="#0055b8" />
            <Setter Property="BorderBrush" Value="#0055b8" />
        </Style>

        <Style Selector="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Foreground" Value="#3d4543" />
        </Style>

        <Style Selector="TabItem">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="15,10" />
            <Setter Property="Margin" Value="0,0,1,0" />
            <Setter Property="Foreground" Value="#3d4543" />
            <Setter Property="Background" Value="#ffffff" />
        </Style>

        <Style Selector="TabItem:selected">
            <Setter Property="Background" Value="#cfd2d3" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style Selector="ProgressBar">
            <Setter Property="Height" Value="18" />
            <Setter Property="Foreground" Value="#0055b8" />
            <Setter Property="Background" Value="#cfd2d3" />
        </Style>
    </Window.Styles>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header Banner  -->
        <Border
            Grid.Row="0"
            Height="65"
            Background="{StaticResource HeaderGradient}"
            BoxShadow="0 2 10 0 #15000000">
            <Grid>
                <StackPanel
                    Margin="20,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <!-- <Image
                        Width="48"
                        Height="48"
                        Margin="0,0,15,0"
                        Source="Assets/CompanyLogo.png" />-->
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock
                            FontSize="24"
                            FontWeight="SemiBold"
                            Foreground="#3d4543"
                            Text="IKTHub" />
                        <TextBlock
                            Margin="0,2,0,0"
                            FontSize="14"
                            Foreground="#6f7271"
                            Text="App for alt teknisk" />
                    </StackPanel>
                </StackPanel>
                <StackPanel
                    Margin="0,0,20,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Width="40"
                        Height="40"
                        Padding="0"
                        Background="Transparent"
                        BorderThickness="0"
                        Classes="primary">
                        <Image
                            Width="20"
                            Height="20"
                            Source="Assets/SettingsIcon.png" />
                    </Button>
                    <Button
                        Width="40"
                        Height="40"
                        Margin="10,0,0,0"
                        Padding="0"
                        Background="Transparent"
                        BorderThickness="0"
                        Classes="primary">
                        <Image
                            Width="20"
                            Height="20"
                            Source="Assets/HelpIcon.png" />
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!--  Main Content  -->
        <TabControl
            Grid.Row="1"
            Margin="0"
            Padding="0"
            Background="Transparent">
            <TabItem AutomationProperties.Name="Programvare installasjon" Header="Programvare installasjon">
                <Grid Margin="20" RowDefinitions="Auto,*,Auto,Auto">
                    <StackPanel Grid.Row="0">
                        <TextBlock
                            Margin="0,5,0,15"
                            FontSize="22"
                            FontWeight="SemiBold"
                            Foreground="#0055b8"
                            Text="Biblotek" />
                        <TextBlock
                            Margin="0,0,0,20"
                            FontSize="14"
                            Opacity="0.9"
                            Text="Velg programmvare Ã¥ installere fra Bibloteket."
                            TextWrapping="Wrap" />
                    </StackPanel>

                    <ScrollViewer
                        Grid.Row="1"
                        Margin="0,10,0,20"
                        VerticalScrollBarVisibility="Auto">
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Border
                                Grid.Column="0"
                                Margin="0,0,15,0"
                                Background="White"
                                CornerRadius="4">
                                <StackPanel Margin="10">
                                    <TextBlock
                                        Margin="5,5,5,10"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Foreground="#0055b8"
                                        Text="Kategorier" />
                                    <Button
                                        Padding="10"
                                        HorizontalContentAlignment="Left"
                                        AutomationProperties.Name="Alle"
                                        Background="Transparent"
                                        Classes="primary"
                                        FontWeight="SemiBold"
                                        Foreground="#3d4543">
                                        <StackPanel Orientation="Horizontal">
                                            <Image
                                                Width="16"
                                                Height="16"
                                                Margin="0,0,10,0"
                                                Source="Assets/ProductivityIcon.png" />
                                            <TextBlock Text="Alle" />
                                        </StackPanel>
                                    </Button>
                                    <Button
                                        Padding="10"
                                        HorizontalContentAlignment="Left"
                                        AutomationProperties.Name="Utvikling"
                                        Background="Transparent"
                                        Classes="primary"
                                        Foreground="#3d4543">
                                        <StackPanel Orientation="Horizontal">
                                            <Image
                                                Width="16"
                                                Height="16"
                                                Margin="0,0,10,0"
                                                Source="Assets/DevelopmentIcon.png" />
                                            <TextBlock Text="Utvikling" />
                                        </StackPanel>
                                    </Button>
                                    <Button
                                        Padding="10"
                                        HorizontalContentAlignment="Left"
                                        AutomationProperties.Name="SÃ¸kemotor"
                                        Background="Transparent"
                                        Classes="primary"
                                        Foreground="#3d4543">
                                        <StackPanel Orientation="Horizontal">
                                            <Image
                                                Width="16"
                                                Height="16"
                                                Margin="0,0,10,0"
                                                Source="Assets/BrowsersIcon.png" />
                                            <TextBlock Text="SÃ¸kemotor" />
                                        </StackPanel>
                                    </Button>
                                    <Button
                                        Padding="10"
                                        HorizontalContentAlignment="Left"
                                        AutomationProperties.Name="Utdanning"
                                        Background="Transparent"
                                        Classes="primary"
                                        Foreground="#3d4543">
                                        <StackPanel Orientation="Horizontal">
                                            <Image
                                                Width="16"
                                                Height="16"
                                                Margin="0,0,10,0"
                                                Source="Assets/EducationIcon.png" />
                                            <TextBlock Text="Utdanning" />
                                        </StackPanel>
                                    </Button>
                                    <Button
                                        Padding="10"
                                        HorizontalContentAlignment="Left"
                                        AutomationProperties.Name="VerktÃ¸y"
                                        Background="Transparent"
                                        Classes="primary"
                                        Foreground="#3d4543">
                                        <StackPanel Orientation="Horizontal">
                                            <Image
                                                Width="16"
                                                Height="16"
                                                Margin="0,0,10,0"
                                                Source="Assets/UtilityIcon.png" />
                                            <TextBlock Text="VerktÃ¸y" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Border>

                            <!--  Software selection grid  -->
                            <Border
                                Grid.Column="1"
                                Background="White"
                                CornerRadius="4">
                                <Grid Margin="15">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <!--  Search and filter  -->
                                    <Grid Grid.Row="0" Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBox
                                            Grid.Column="0"
                                            Margin="0,0,10,0"
                                            AutomationProperties.Name="SÃ¸k programvare"
                                            Watermark="sÃ¸k..." />
                                        <Button
                                            Grid.Column="1"
                                            Width="120"
                                            AutomationProperties.Name="Hurtig valg"
                                            Classes="primary"
                                            Content="Hurtig Valg" />
                                    </Grid>

                                    <!--  Automatically generated checkboxes for programs  -->
                                    <WrapPanel
                                        x:Name="ProgramContainer"
                                        Grid.Row="1"
                                        Orientation="Horizontal" />
                                </Grid>
                            </Border>
                        </Grid>
                    </ScrollViewer>

                    <StackPanel
                        Grid.Row="2"
                        Margin="0,10,0,15"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <CheckBox
                            x:Name="CreateDesktopShortcutsCheckBox"
                            Margin="0,0,15,0"
                            Content="Opprett skrivebord snarveier"
                            IsChecked="True" />
                        <CheckBox
                            x:Name="LaunchOnCompleteCheckBox"
                            Margin="0,0,15,0"
                            Content="KjÃ¸r programmvare nÃ¥r ferdig" />
                        <CheckBox
                            x:Name="EjectDiskCheckBox"
                            Margin="0"
                            Content="Lukk etter installasjon"
                            IsChecked="True" />
                    </StackPanel>

                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <TextBlock
                                x:Name="StatusText"
                                FontSize="13"
                                Opacity="0.7"
                                Text="" />
                            <ProgressBar
                                x:Name="ProgressBarInstall"
                                Width="350"
                                Margin="0,8,20,0"
                                HorizontalAlignment="Left"
                                Maximum="100"
                                Minimum="0"
                                ShowProgressText="True"
                                Value="0" />
                        </StackPanel>

                        <StackPanel
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <Button
                                Width="120"
                                Margin="0,0,10,0"
                                Background=""
                                Classes="primary"
                                Click="RefreshFunction"
                                Content="Refresh" />
                            <Button
                                Width="150"
                                Classes="primary"
                                Click="InstallButton"
                                Content="Installer" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Header="System verktÃ¸y">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border
                        Grid.Column="0"
                        Padding="15"
                        Background="#f0f2f5">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,15"
                                FontSize="18"
                                FontWeight="SemiBold"
                                Foreground="#333333"
                                Text="Filter" />

                            <TextBox
                                Name="SearchTools"
                                Margin="0,0,0,20"
                                AutomationProperties.Name="SÃ¸k VerktÃ¸y"
                                Watermark="SÃ¸k verktÃ¸y..." />

                            <Button
                                Margin="0,0,0,8"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Classes="primary"
                                Content="Alle verktÃ¸y" />

                            <Button
                                Margin="0,0,0,8"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Content="Ytelse" />

                            <Button
                                Margin="0,0,0,8"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Content="Sikkerhet" />

                            <Button
                                Margin="0,0,0,8"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Content="DiskverktÃ¸y" />

                            <Button
                                Margin="0,0,0,8"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Content="Nettverk" />

                            <Button
                                Margin="0,0,0,8"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Content="Oppdateringer" />
                        </StackPanel>
                    </Border>

                    <Grid
                        Grid.Column="1"
                        Margin="20"
                        RowDefinitions="Auto,*,Auto">
                        <StackPanel Grid.Row="0">
                            <TextBlock
                                Margin="0,5,0,15"
                                FontSize="22"
                                FontWeight="SemiBold"
                                Foreground="#333333"
                                Text="System verktÃ¸y" />
                            <TextBlock
                                Margin="0,0,0,20"
                                FontSize="14"
                                Foreground="#555555"
                                Opacity="0.9"
                                Text="UtfÃ¸r systemverktÃ¸y og sjekker for Ã¥ optimalisere system ytelse og sikkerhet."
                                TextWrapping="Wrap" />
                        </StackPanel>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <WrapPanel
                                x:Name="FixContainer"
                                Margin="0,0,0,15"
                                Orientation="Horizontal" />
                        </ScrollViewer>

                        <StackPanel
                            Grid.Row="2"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <Button
                                Width="120"
                                Margin="0,0,10,0"
                                Classes="primary"
                                Click="RefreshSystemInfo"
                                Content="Oppdater" />
                            <Button
                                Width="150"
                                Classes="primary"
                                Click="RunAllChecks"
                                Content="KjÃ¸r alle skjekker" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>

        <!--  Footer  -->
        <Border
            Grid.Row="2"
            Height="35"
            Padding="10"
            Background="#252526">
            <Grid>
                <TextBlock
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Foreground="White"
                    Opacity="0.7"
                    Text="IKTHub v1.0.0" />
                <TextBlock
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Foreground="White"
                    Opacity="0.7"
                    Text="Â© 2025 Kasper. Alle rettigheter reservert." />
            </Grid>
        </Border>
    </Grid>
</Window>
